{% extends 'base.html.twig' %}

{% block title %}Edit Contact{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Edit Contact</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_contact_index') }}">
                    View All Contacts
                </a>
            </div>
            <div class="card-body">
                {% include 'contact/_form.html.twig' with {'button_label': 'Update Contact', 'button_color': 'btn-outline-success'}  %}
            </div>
        </div>
    </div>
{% endblock %}