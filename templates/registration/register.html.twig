{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <h1>Register</h1>

        {{ form_errors(registrationForm) }}
        {{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}
        <div class="mb-3">
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
        </div>
        <div class="mb-3">
            {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
        </div>
        <div class="form-check mb-3">
            {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input'}}) }}
        </div>

        <button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>
        {{ form_end(registrationForm) }}
    </div>
    <div class="container">
        <h1 class="h3 mb-3 font-weight-normal">Already have account?</h1>
        <button onclick="document.location='{{ path('app_login') }}'" class="btn btn-lg btn-primary">Sign in</button>
    </div>
{% endblock %}
